{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": ".",
    "outDir": "./dist",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": false,
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["index.ts", "router.ts", "src/**/*.ts"],
  "exclude": [
    "node_modules",
    "dist",
    "src/test",
    "src/**/*.test.ts",
    "jest.config.ts"
  ]
}
